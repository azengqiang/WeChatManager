<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="pre.my.test.robot.mapper.MenuAnalysisMapper">
    <resultMap id="BaseResultMap" type="pre.my.test.robot.dto.menu.MenuAnalysis">
        <id column="id" property="id"/>
        <result column="openid" property="openid"/>
        <result column="versionNumber" property="versionNumber"/>
        <result column="value" property="value"/>
        <result column="creationDate" property="creationDate"/>
    </resultMap>


    <select id="selectUserNum"  parameterType="pre.my.test.robot.dto.menu.MenuAnalysis" resultMap="BaseResultMap">
        select * from rb_menu_analysis
        <where>
            <if test="startDate !=null and startDate != ''">
                and  creationDate  <![CDATA[ >= ]]> #{startDate}
            </if>
            <if test="endDate !=null and endDate != ''">
                and  creationDate  <![CDATA[ <= ]]> #{endDate}
            </if>
        </where>
        group by openid asc
    </select>

    <select id="select"  parameterType="pre.my.test.robot.dto.menu.MenuAnalysis" resultMap="BaseResultMap">
        select * from rb_menu_analysis
        <where>
            <if test="startDate !=null and startDate != ''">
                and  creationDate  <![CDATA[ >= ]]> #{startDate}
            </if>
            <if test="endDate !=null and endDate != ''">
                and  creationDate  <![CDATA[ <= ]]> #{endDate}
            </if>
        </where>
    </select>

    <insert id="save" parameterType="pre.my.test.robot.dto.menu.MenuAnalysis"
            useGeneratedKeys="true" keyProperty="id">
        insert into rb_menu_analysis(openid,versionNumber,value,creationDate)
        values(#{openid},#{versionNumber},#{value},CURRENT_TIMESTAMP)
    </insert>

</mapper>