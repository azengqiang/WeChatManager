<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="pre.my.test.robot.mapper.MaterialMapper">
    <resultMap id="BaseResultMap" type="pre.my.test.robot.dto.material.Material">
        <id column="material_id" property="materialId"/>
        <result column="media_id" property="mediaId"/>
        <result column="name" property="name"/>
        <result column="path" property="path"/>
        <result column="url" property="url"/>
        <result column="media_type" property="mediaType"/>
        <result column="creation_date" property="creationDate"/>
    </resultMap>

    <select id="selectUserInfoByOpenid" parameterType="String" resultMap="BaseResultMap">
              select * from rb_material  where media_id = #{mediaId}
    </select>
    <select id="selectAll" resultMap="BaseResultMap">
        select * from rb_material
    </select>
    <!-- useGeneratedKeys设置为"true"表明要MyBatis获取由数据库自动生成的主键；
     keyProperty="id"指定把获取到的主键值注入到User的id属性-->
    <insert id="save" parameterType="pre.my.test.robot.dto.material.Material"
            useGeneratedKeys="true" keyProperty="id">
        insert into rb_material(media_id,name,path,url,media_type,,creation_date)
        values(#{mediaId},#{name},#{path},#{url},#{mediaType},CURRENT_TIMESTAMP)
    </insert>

    <!--<update id="updateUserInfo" parameterType="User" >
        update user set userName=#{userName},userAge=#{userAge},userAddress=#{userAddress} where id=#{id}
    </update>

    <delete id="deleteUser" parameterType="int">
        delete from user where id=#{id}
    </delete>-->
</mapper>