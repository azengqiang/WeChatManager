<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="pre.my.test.robot.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="pre.my.test.robot.dto.user.User">
        <id column="id" property="id"/>
        <result column="userName" property="userName"/>
        <result column="password" property="password"/>
        <result column="lastLoginTime" property="lastLoginTime"/>
    </resultMap>
    <select id="select" parameterType="pre.my.test.robot.dto.user.User" resultMap="BaseResultMap">
              select * from rb_user
              where userName = #{userName} and password = #{password}
    </select>
    <select id="update" parameterType="pre.my.test.robot.dto.user.User">
        update  rb_user
        set lastLoginTime = CURRENT_TIMESTAMP
        where userName = #{userName}
    </select>
</mapper>